<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-2">
                    <div class="logo">
                        @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                </div>
                <div class="col-md-8">
                    <ul class="nav-menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li><a href="#">How it works</a></li> @*TODO якорь  на главной странице*@
                        <li><a href="#">Rates & Fees</a></li> @*TODO якорь  на главной странице*@
                        <li><a href="#">Lending Policy</a></li> @*TODO якорь  на главной странице*@
                        <li>@Html.ActionLink("Terms of Use", "TermsUse", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <div class="container body-content">
        @RenderBody()
        <hr />
        
    </div>
    <footer>
        @Html.ActionLink("Disclaimer", "Disclaimer", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>